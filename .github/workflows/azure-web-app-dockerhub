name: Build and deploy my docker image to an Azure Web App

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Log in to Azure
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}
        
      - name: Log in to Docker container registry
        run: |
          docker login -u ${{ secrets.REGISTRY_USERNAME }} -p ${{ secrets.REGISTRY_PASSWORD }}

      - name: Build and push container image to registry
        run: |
          docker build . -t ibene/tic-tac-toe:${{ github.sha }}
          docker push ibene/tic-tac-toe:${{ github.sha }}

      - uses: azure/webapps-deploy@v2
          with:
            app-name: 'myapp'
            images: 'docker.io/ibene/tic-tac-toe:${{ github.sha }}'
        
      - name: Azure logout
        run: |
        az logout